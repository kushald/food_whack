<!DOCTYPE html>
<html>
<head>
  <title>Foodwhack</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.1/leaflet.css" />
  <script src="http://cdn.leafletjs.com/leaflet-0.7.1/leaflet.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Static navbar -->
    <div class="navbar navbar-custom" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Food Whack</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            
            
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a href="/" class="navbar-brand">Foodwhack</a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            <li>
              <a href="/">HOME</a>
            </li>
            <li>
              <a href="#">BLOG</a>
            </li>
            <li>
              <a href="#">HELP</a>
            </li>
            <li>
              <a href="#">ABOUT</a>
            </li>
            <li>
              <a href="#">CONTACT</a>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="primary">
                <%= link_to(destroy_user_session_path, :method => :get, :class => 'icon-off' ) do %>SIGN OUT
                <% end %>
              </li>
            <% else %>
              <li class="inverse">
                <a href="/users/sign_in">LOGIN</a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <div class="container">
    <%= yield %>
  </div>
  <%
     q = params[:q] || "New York"
     ll = Geocoder.search("#{q}")[0].geometry["location"]
  %>
  <script type="text/javascript">
    $(document).on('page:fetch',   function() { NProgress.start(); });
    $(document).on('page:change',  function() { NProgress.done(); });
    $(document).on('page:restore', function() { NProgress.remove(); });
    $(document).on('page:load', function() { initMap(); });
    $('.dropdown-toggle').dropdown();

    var map = L.map('map').setView([<%= ll["lat"] %>,<%= ll["lng"] %>], 12);

      L.tileLayer('http://{s}.tile.cloudmade.com/BC9A493B41014CAABB98F0471D759707/997/256/{z}/{x}/{y}.png', {
        maxZoom: 18,
        attribution: ''
      }).addTo(map);

      var loc = <%= @location %>;
      var addr = <%= raw @address %>;
      console.log(loc[0][0]);
      for(var i=0;i <= loc.length; i++) {
        L.marker(loc[i]).addTo(map).bindPopup('<a href="#">'+addr[i]+'</a>');  
      }
      
      var popup = L.popup();

      function onMapClick(e) {
        popup
          .setLatLng(e.latlng)
          .setContent("You clicked the map at " + e.latlng.toString())
          .openOn(map);
      }

      map.on('click', onMapClick);

  </script>
</body>
</html>
